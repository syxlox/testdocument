<?xml version="1.0" encoding="UTF-8"?>
<!-- Fields can only be shown once in the form! --><formLayout xmlns="http://polarion.com/schema/WorkItems/FormLayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://polarion.com/schema/WorkItems/FormLayout">

    <!-- Horizontal layout element, adds components on horizontal row. Each component is in a new column. -->
    <horizontal>
        <!-- Vertical layout element adds components into one vertical column. Each component is in a new row. -->
        <vertical>
            <section>
                <field id="type"/>
                <field id="severity"/>
                <field id="project"/>
                <field id="projectid"/>
            </section>
            </vertical>
        <vertical>
            <section>
                <field id="assignee"/>
                <field id="resolution"/>
                <field id="custom_id"/>
                <field id="int_remark"/>
            </section>
        </vertical>
        <vertical>
            <section>
                <field id="vsc"/>
                <field id="lcc"/>
                <field id="obj_type"/>
                <field id="dms"/>
                <field id="testingsite"/>
            </section>
        </vertical>
    </horizontal>

    <field id="description"/>
    <horizontal>
        <vertical>
            <section>
                <field id="doc_title" readOnly="true"/>
                <field id="dcc_description" readOnly="true"/>
                <field id="serialno"/>
            </section>
        </vertical> 
    </horizontal>

    <field id="documentnumbering" readOnly="true"/> 

    <horizontal>
        <vertical>
            <section>
                <field id="doctype"/>
                <field id="aspectkey"/>
                <field id="otc_subtype" readOnly="true"/>
            </section>
        </vertical>
        <vertical>
            <section>
                <field id="p_stationn"/>
                <field id="p_levelb"/>
                <field id="p_levelc"/>
                <field id="p_leveld"/>
            </section>
        </vertical>
        <vertical>
            <section>
                <field id="p_levele"/>
                <field id="p_levelf"/>
                <field id="p_levelg"/>
                <field id="p_levelh"/>
            </section>
        </vertical>
    </horizontal>
    <horizontal>
        <vertical>
            <section>
                <field id="code_letter"/>
            </section>
        </vertical>
        <vertical>
            <section>
                <field id="dcc_class"/>
            </section>
        </vertical>
    </horizontal>

    <horizontal>
        <section>
            <field id="otc"/>
            <field id="subtype"/>
        </section>
    </horizontal>

    <horizontal>
        <section>
            <field id="otc_forl"/>
            <field id="l_stationn"/>
            <field id="l_levelb"/>
            <field id="l_levelc"/>
        </section>
        <section>
            <field id="l_leveld"/>
            <field id="l_levele"/>
            <field id="l_levelf"/>
            <field id="l_levelg"/>
            <field id="l_levelh"/>
        </section>
    </horizontal>

    <horizontal>
        <section>
            <field id="language"/>
        </section>
    </horizontal>

    <horizontal>
        <section>
            <field id="revision"/>
        </section>
    </horizontal>

    <horizontal>
        <section>
            <field id="page_counter"/>
        </section>
    </horizontal>

    <horizontal>
        <section>
            <field id="documentn" readOnly="true"/>
        </section>
    </horizontal>

    <horizontal>
        <section>
            <field id="doc_file" readOnly="true"/>
        </section>
    </horizontal>

    

    <horizontal>
        <vertical>
            <section>
                <field id="ifi"/>
                <field id="ifa"/>
                <field id="ifd"/>
                <field id="ifm"/>
                <field id="ifc"/>
                <field id="ab"/>
            </section>
        </vertical>
    </horizontal>

    <field id="contacts" readOnly="true"/>

    <horizontal>
                <vertical>
                    <section>
                        <field id="contact_s"/>
                        <field id="manufacturer"/>
                        <field id="contact_m"/>
                    </section>
                </vertical>
                <vertical>
                    <section>
                        <field id="res_dep"/>
                        <field id="subpm"/>
                    </section>
                </vertical>
    </horizontal>

    <field id="status_" readOnly="true"/>
        <horizontal>
                <section>
                    <field id="author"/>
                    <field id="workprogress"/>
                    <field id="due_date_o"/>
                </section>
                <section>
                    <field id="reviewer"/>
                    <field id="review_status"/>
                    <field id="due_date_r"/>
                </section>
                <section>
                    <field id="approver"/>
                    <field id="approval_status"/>
                    <field id="due_date_a"/>
                </section>
        </horizontal>


    <!-- Complex fields should not be used in section or panel elements - there is no space for them. -->
    <field id="comments"/>
    <field id="approvals"/>
    <field id="linkedRevisions"/>
    <field id="linkedWorkItems"/>
    <field id="hyperlinks"/>
    <field id="attachments"/>
    <field id="watches"/>
</formLayout>